<h1>Welcome to Your Expense Tracker</h1>

<!-- Navigation Links -->
<nav>
    <ul>
        <li><a href="/expenses">View Expenses</a></li>
        <li><a href="/add-expense">Add Expense</a></li>
    </ul>
</nav>

<!-- Dashboard Content -->
<section class="expense-summary">
    <h2 class="expense-summary-title">Expense Summary</h2>
    <ul class="expense-summary-list">
        {{#each categoryTotals}}
            <li class="expense-summary-item">{{@key}}: R{{this}}</li>
        {{/each}}
    </ul>
    <p class="total-expenses">Total expenses: R{{totalAmount}}</p>
</section>

