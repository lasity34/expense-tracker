<h2>All Expenses</h2>

<!-- Optional: Add a filter form here -->

<table style="width:100%; border-collapse: collapse;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th>Date</th>
            <th>Category</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each expenses}}
            <tr>
                <td>{{this.date_added}}</td>
                <td>{{this.category_name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.amount}}</td>
                <td><a href="/delete-expense/{{this.id}}">Delete</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>
